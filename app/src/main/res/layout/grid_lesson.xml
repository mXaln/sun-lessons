<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_65dp"
    android:layout_height="@dimen/_65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_lesson">

    <TextView
        android:id="@+id/lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_example"
        android:textColor="@color/dark_gray"
        android:textStyle="bold"
        android:textSize="@dimen/_25sp"
        android:layout_marginTop="@dimen/_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lesson_tally"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lesson_tally"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:text="@string/tally_example"
        android:fontFamily="@font/tally"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold"
        android:textScaleX="1.5"
        app:layout_constraintTop_toBottomOf="@id/lesson_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="@dimen/_30dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_lock_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>