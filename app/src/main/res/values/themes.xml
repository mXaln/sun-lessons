<resources>
    <style name="Base.Theme.SUN" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Theme.SUN" parent="Base.Theme.SUN" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/celestial_blue</item>
        <item name="colorPrimaryDark">@color/celestial_blue</item>
        <item name="colorAccent">@color/celestial_blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/celestial_blue</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom_sheet</item>
    </style>

    <style name="BottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@drawable/menu_item_background</item>
    </style>
</resources>